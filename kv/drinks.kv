#: import utils kivy.utils
<DrinksScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#dff2e5")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:1
            pos_hint:{"top":1, "Left":1}
            size_hint: 1,.1
        GridLayout:
            rows:1
            pos_hint:{"top":0.9, "Left":1}
            size_hint: 1,.2
            Image:
                source: "icons/Food.png"
            Image:
                source: "icons/logo.png"
            Image:
                source: "icons/Food2.png"

        Label:
            pos_hint:{"top":0.7,"left":1}
            size_hint: 1,0.1
            text: "Drinks Menu"
            color: [0, 0, 0, 1]
            bold: True
            font_size: 25
            id: today_menu
        GridLayout:
            rows:4
            pos_hint:{"top":0.6 , "left":1}
            size_hint: 1,0.4
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 11"
                font_size:30
                id: item_11

            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                text: "item 11"
                on_active: root.checkbox_click(self, self.active)
                id: check_box11
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 22"
                font_size:30
                id: item_22
            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click22(self, self.active)
                id: check_box22
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 33"
                font_size:30
                id: item_33

            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click33(self, self.active)
                id: check_box33
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 44"
                font_size:30
                id: item_44
            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click44(self, self.active)
                id: check_box44
        GridLayout:
            rows:1
            pos_hint:{"top":0.2 , "left":1}
            size_hint: 1,0.2
            ImageButton:
                source: "icons/next.png"
                on_press: root.manager.current = 'checkout'
