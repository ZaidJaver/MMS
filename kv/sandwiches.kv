#: import utils kivy.utils
<SandwichesScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#dff2e5")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:1
            pos_hint:{"top":1, "Left":1}
            size_hint: 1,.1
        GridLayout:
            rows:1
            pos_hint:{"top":0.9, "Left":1}
            size_hint: 1,.2
            Image:
                source: "icons/Food.png"
            Image:
                source: "icons/logo.png"
            Image:
                source: "icons/Food2.png"

        Label:
            pos_hint:{"top":0.7,"left":1}
            size_hint: 1,0.1
            text: "Sandwiches Menu"
            color: [0, 0, 0, 1]
            bold: True
            font_size: 25
            id: today_menu
        GridLayout:
            rows:4
            pos_hint:{"top":0.6 , "left":1}
            size_hint: 1,0.4
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 1"
                font_size:30
                id: item_1

            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                text: "item 1"
                on_active: root.checkbox_click(self, self.active)
                id: check_box1
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 2"
                font_size:30
                id: item_2
            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click2(self, self.active)
                id: check_box2
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 3"
                font_size:30
                id: item_3

            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click3(self, self.active)
                id: check_box3
            Label:
                color: 0.0, 0.0, 0.0, 5
                text: "item 4"
                font_size:30
                id: item_4
            CheckBox:
                color: 0.0, 0.0, 0.0, 5
                on_active: root.checkbox_click4(self, self.active)
                id: check_box4
        GridLayout:
            rows:1
            cols: 2
            pos_hint:{"top":0.2 , "left":1}
            size_hint: 1,0.2
            ImageButton:
                source: "icons/next.png"
                on_press: root.manager.current = 'drinks'